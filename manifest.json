{
    "manifest_version": 3,
    "name": "Tabs2Favorites",
    "version": "1.0.0",
    "author": "Sukarth",
    "homepage_url": "https://github.com/Sukarth/Tabs2Favorites",
    "description": "Save selected browser tabs into a new or existing bookmark folder easily, and choose if you want to close them after bookmarking",
    "default_locale": "en",
    "permissions": [
        "tabs",
        "bookmarks",
        "contextMenus",
        "storage",
        "notifications",
        "system.display"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_title": "__MSG_actionDefaultTitle__"
    },
    "commands": {
        "save-selected-tabs": {
            "suggested_key": {
                "default": "Alt+3",
                "mac": "Alt+3"
            },
            "description": "__MSG_commandSaveSelectedTabs__"
        },
        "save-selected-tabs-and-close": {
            "suggested_key": {
                "default": "Alt+4",
                "mac": "Alt+4"
            },
            "description": "__MSG_commandSaveSelectedTabsAndClose__"
        }
    }
}